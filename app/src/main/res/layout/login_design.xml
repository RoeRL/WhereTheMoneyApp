<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="600dp"
        android:layout_height="669dp"
        android:layout_marginTop="-160dp"
        android:background="#31900F"
        android:rotation="-80" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/rectangle_1"
        android:layout_marginBottom="50dp"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/rectangle_1"
        android:layout_marginTop="250dp"
        android:background="@mipmap/ic_wtm_foreground"/>

    <EditText
        android:id="@+id/m_emailForm"
        android:hint="Email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"/>

    <EditText
        android:id="@+id/m_passwordForm"
        android:hint="Password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"/>

    <Button
        android:id="@+id/m_loginButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#39900F"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:layout_marginTop="600dp"/>

</RelativeLayout>